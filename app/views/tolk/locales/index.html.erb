<div class="categories-title">
  Available Languages
</div>
<% if @locales.any? %>
  <ul class="locales clearfix">
    <% @locales.each do |locale| %>
      <li>
        <%= link_to locale.language_name, locale %>
        <% missing = locale.translation_percent %>
        <% if missing < 100 %>
          <span class="missing_translations"><%= locale.translation_percent %>% complete</span>
        <% end %>
      </li>
    <% end %>
  </ul>

<% else %>
  <p>No locales yet.</p>

<% end %>
